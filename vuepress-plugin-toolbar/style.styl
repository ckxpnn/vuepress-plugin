.me-toolbar-sidebar {
  font-size: 12px;
  background-color: #fbfbfb;
  width: 3.8rem;
  position: fixed;
  margin: 0;
  top: 3.6rem;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
  //border-left: 1px solid #eaecef;
  //overflow-y: auto;
  background: rgba(255, 255, 255, 0.1);

  .option-box {
    border-top: 1px solid #eee;
    font-size: 12px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #eee;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, .05);
    background-color: #fff;
    height: 60px;
    cursor: pointer;

    &:hover {
      .popover {
        display block
      }
    }

    .popover {
      display none
      position: absolute;
      color: #2c3e50;
      left: 100%;
      top: -1px;
      width: 240px;
      background: #fff;
      border: 1px solid #eee;
      left: unset;
      right: 100%;
      margin-right: 2px;
      margin-left: 0;
      z-index: 2
    }
  }
}
